<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imgViewHienThiMonAn"
        android:background="@drawable/background_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size150dp" />

    <FrameLayout
        android:background="@color/colorGreenTran"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp">
        <TextView
            android:id="@+id/txtTenLoaiMonAn"
            android:textSize="@dimen/size18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loai"/>
    </FrameLayout>
</FrameLayout>