<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size190dp"
    android:background="@drawable/background_header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgViewLogoNavigation"
        android:layout_width="@dimen/size76dp"
        android:layout_height="@dimen/size76dp"
        android:src="@drawable/logologin"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size24dp">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/txtNameNavigation"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/imgViewLogoNavigation"
        android:layout_alignStart="@+id/imgViewLogoNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgViewLogoNavigation"/>

</RelativeLayout>