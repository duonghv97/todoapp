<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imgViewFood"
        android:background="@drawable/background_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size150dp" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorGreenTran"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp">
        <TextView
            android:id="@+id/txtNameFood"
            android:textSize="@dimen/size18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loai"/>
        <TextView
            android:id="@+id/txtPriceFood"
            android:textSize="@dimen/size18sp"
            android:textStyle="bold"
            android:text="121314124"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>